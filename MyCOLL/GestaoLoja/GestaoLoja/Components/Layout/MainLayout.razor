@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView Context="authContext">
                <Authorized>
                    <div class="d-flex align-items-center gap-3">
                        <span>Olá, <strong>@authContext.User.Identity?.Name</strong>!</span>

                        <form action="Account/Logout" method="post">
                            <AntiforgeryToken />
                            <input type="hidden" name="ReturnUrl" value="" />
                            <button type="submit" class="btn btn-outline-dark btn-sm">
                                <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Sair
                            </button>
                        </form>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="d-flex gap-2">
                        <a href="/Account/Register" class="btn btn-outline-primary btn-sm">
                            <span class="bi bi-person-plus-fill" aria-hidden="true"></span> Registar
                        </a>

                        <a href="/Account/Login" class="btn btn-primary btn-sm">
                            <span class="bi bi-person-circle" aria-hidden="true"></span> Entrar
                        </a>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>