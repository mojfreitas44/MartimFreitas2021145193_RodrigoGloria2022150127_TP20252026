@inject NavigationManager NavigationManager

@code {
    protected override void OnInitialized()
    {
        // Se um utilizador anónimo tentar aceder a uma página protegida,
        // este componente é carregado e redireciona-o para o Login
        // guardando a página onde ele queria ir (ReturnUrl).
        var returnUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.NavigateTo($"Account/Login?returnUrl={Uri.EscapeDataString(returnUrl)}", forceLoad: true);
    }
}