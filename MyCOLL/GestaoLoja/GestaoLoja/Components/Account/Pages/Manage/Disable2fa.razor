@page "/Account/Manage/Disable2fa"

@using Microsoft.AspNetCore.Identity
@using GestaoLoja.Data
@using GestaoLoja.Components.Account
@using GestaoLoja.Components.Account.Shared

@inject UserManager<ApplicationUser> UserManager
@inject IdentityUserAccessor UserAccessor
@inject IdentityRedirectManager RedirectManager
@inject ILogger<Disable2fa> Logger

<PageTitle>Desativar 2FA</PageTitle>

<StatusMessage />
<h3>Desativar 2FA (Autenticação de Dois Fatores)</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Esta ação apenas desativa o 2FA.</strong>
    </p>
    <p>
        Desativar o 2FA não altera as chaves usadas nas aplicações autenticadoras. Se quiseres mudar a chave
        usada numa aplicação autenticadora deves <a href="Account/Manage/ResetAuthenticator">redefinir as tuas chaves autenticadoras.</a>
    </p>
</div>

<div>
    <form @formname="disable-2fa" @onsubmit="OnSubmitAsync" method="post">
        <AntiforgeryToken />
        <button class="btn btn-danger" type="submit">Desativar 2FA</button>
    </form>
</div>

@code {
    private ApplicationUser user = default!;

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        user = await UserAccessor.GetRequiredUserAsync(HttpContext);

        if (HttpMethods.IsGet(HttpContext.Request.Method) && !await UserManager.GetTwoFactorEnabledAsync(user))
        {
            throw new InvalidOperationException("Não é possível desativar 2FA para o utilizador porque não está ativado.");
        }
    }

    private async Task OnSubmitAsync()
    {
        var disable2faResult = await UserManager.SetTwoFactorEnabledAsync(user, false);
        if (!disable2faResult.Succeeded)
        {
            throw new InvalidOperationException("Ocorreu um erro inesperado ao desativar 2FA.");
        }

        var userId = await UserManager.GetUserIdAsync(user);
        Logger.LogInformation("Utilizador com ID '{UserId}' desativou 2FA.", userId);
        RedirectManager.RedirectToWithStatus("Account/Manage/TwoFactorAuthentication", "2FA foi desativado. Podes reativá-lo quando configurares uma aplicação autenticadora.", HttpContext);
    }
}